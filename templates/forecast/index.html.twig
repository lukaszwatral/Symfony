{% extends 'layout_crud.html.twig' %}

{% block title %}Forecast index{% endblock %}

{% block content %}
    <h1>Forecast index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Temperature</th>
                <th>FeelsLike</th>
                <th>Pressure</th>
                <th>Humidity</th>
                <th>WindSpeed</th>
                <th>Icon</th>
                <th>Cloudiness</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for forecast in forecasts %}
            <tr>
                <td>{{ forecast.id }}</td>
                <td>{{ forecast.date ? forecast.date|date('Y-m-d') : '' }}</td>
                <td>{{ forecast.temperature }}&deg;</td>
                <td>{{ forecast.feelsLike }}&deg;</td>
                <td>{{ forecast.pressure }}</td>
                <td>{{ forecast.humidity }}</td>
                <td>{{ forecast.windSpeed }}</td>
                <td><i class="bi-{{ forecast.icon }}"></i></td>
                <td>{{ forecast.cloudiness }}</td>
                <td>
                    <a href="{{ path('app_forecast_show', {'id': forecast.id}) }}">show</a>
                    <a href="{{ path('app_forecast_edit', {'id': forecast.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_forecast_new') }}">Create new</a>
{% endblock %}
